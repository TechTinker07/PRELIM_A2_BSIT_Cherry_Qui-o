@model PRELIM_A2_BSIT_Cherry_Quiño.Models.Library

<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
        color: #222;
        padding: 15px;
    }

    h2 {
        color: #2c3e50;
        margin-bottom: 15px;
    }

    a {
        color: #2980b9;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .nav-links {
        margin-bottom: 20px;
    }

        .nav-links a {
            margin-right: 12px;
            font-weight: 600;
        }

    .section {
        background: white;
        padding: 15px;
        border-radius: 6px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        margin-bottom: 25px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th, td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #2980b9;
        color: white;
    }

    ul {
        margin-top: 8px;
        padding-left: 18px;
        color: #34495e;
    }

    strong {
        color: #2980b9;
    }
</style>

<h2>Library Dashboard</h2>

<div class="nav-links">
    <a href="/Library/CreateBook">Add Book</a> |
    <a href="/Library/CreateUser">Add User</a>
</div>

<div class="section">
    <h3>Books List</h3>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Last Returned</th>
                <th>Available</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td><a href="/Library/Details/@book.Id">@book.Title</a></td>
                    <td>@book.Author.Name</td>
                    <td>@book.DateLastReturned?.ToShortDateString() ?? "N/A"</td>
                    <td>@(book.IsAvailable ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="section">
    <h3>Users</h3>
    @foreach (var user in Model.Users)
    {
        <p><strong>@user.Name</strong> borrowed:</p>
        <ul>
            @foreach (var book in user.BorrowedBooks)
            {
                <li>@book.Title by @book.Author.Name</li>
            }
        </ul>
    }
</div>
